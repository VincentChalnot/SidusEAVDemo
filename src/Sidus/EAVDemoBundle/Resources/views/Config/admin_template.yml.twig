entity: {{ data_class }}
form: sidus_data
manager: sidus_eavdemo.manager.data
actions:
    list:
        title: {{ family | trans }} list
        permissions: [ROLE_ADMIN, ROLE_USER]
        export: [html, pdf, xls, csv, json]
        # this fields will be displayed in the list table
        fields:
            id: ~
            label: ~
            createdAt:
                type: date
            family: ~
            _actions:
                type: collection
                options:
                    _edit:
                        type: action
                        options:
                            title: Edit
                            route: sidus.admin.{{ admin }}.edit
                            parameters: {id: ~}
                            icon: pencil
                    _delete:
                        type: action
                        options:
                            title: Delete
                            route: sidus.admin.{{ admin }}.delete
                            parameters: {id: ~}
                            icon: remove
        actions:
            create:
                title: 'Create'
                route: sidus.admin.{{ admin }}.create
                icon: plus
    create:
        permissions: [ROLE_ADMIN]
    edit:
        permissions: [ROLE_ADMIN]
    delete:
        permissions: [ROLE_ADMIN]